@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta>
    <title>
        @ViewBag.Title - My ASP.NET Application
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body style="color:black;">
    <nav class="navbar navbar-expand-xl navbar-text navbar-toggleable-sm navbar-dark bg-success">
        <div class="container">
            @Html.ActionLink("MasterMech", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @*First in Action Link Is Name Which will be Dipalyed Second is the Action Name of the controller and third is the Controller Name*@

            <div class="collapse navbar-collapse d-sm-inline justify-content-between">
                <ul class="navbar-nav">
                    <li>@Html.ActionLink("Invoice", "Index", "Invoice", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Item", "Index", "Item", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Customer", "Index", "Customer", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Store", "Store", "Menu", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Reports", "Reports", "Menu", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("List User", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Help", "Help", "Menu", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Logout", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <b style="color:black;font-family:'Times New Roman', Times, serif;font-size:18px;">Welcome&nbsp;&nbsp;@Session["UserName"]</b>
        </div>


        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                @Session["UserType"]
            </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Change Password", "PasswordChange", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("My Account", "AccountDetails", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Logout", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



